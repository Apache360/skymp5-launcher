<UserControl x:Class="UpdatesClient.UI.Controllers.OnlineButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UpdatesClient.UI.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="16">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="16"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="POSPELOV" VerticalAlignment="Bottom" Foreground="White" FontFamily="Constantia" FontSize="14" Height="16" TextAlignment="Right"/>
        <Rectangle Fill="White" HorizontalAlignment="Right" Margin="0,0,0,2" Width="11" Height="11" VerticalAlignment="Bottom" Grid.Column="1">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="{StaticResource arrowDown}" Stretch="Uniform"/>
            </Rectangle.OpacityMask>
        </Rectangle>
    </Grid>
</UserControl>
