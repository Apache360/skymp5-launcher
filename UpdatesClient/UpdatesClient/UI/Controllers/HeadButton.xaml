<UserControl x:Class="UpdatesClient.UI.Controllers.HeadButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UpdatesClient.UI.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="50">
    <Grid>
        <Rectangle Fill="#B2F4F4F5" HorizontalAlignment="Left" Margin="2,1,0,1" Width="24">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="{StaticResource head}"/>
            </Rectangle.OpacityMask>
        </Rectangle>
        <Rectangle HorizontalAlignment="Right" Margin="0,10,7,9" Width="11" Fill="#FFF4F4F5">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="{StaticResource arrowDown}" Stretch="Uniform"/>
            </Rectangle.OpacityMask>
        </Rectangle>



    </Grid>
</UserControl>
