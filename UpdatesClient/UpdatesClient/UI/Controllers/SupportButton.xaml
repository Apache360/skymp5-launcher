<UserControl x:Class="UpdatesClient.UI.Controllers.SupportButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UpdatesClient.UI.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="30">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle x:Name="image" Margin="2,3" Fill="White" >
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="/UpdatesClient;component/Assets/Images/Buttons/star.png"/>
            </Rectangle.OpacityMask>
        </Rectangle>
        <TextBlock x:Name="text" Grid.Column="1" Margin="5,5,6,5" Text="Поддержка" VerticalAlignment="Center" Foreground="White" FontFamily="Constantia" FontSize="16" Height="20"/>
    </Grid>
</UserControl>
