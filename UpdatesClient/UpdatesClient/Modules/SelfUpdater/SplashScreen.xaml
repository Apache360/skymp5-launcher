<Window x:Class="UpdatesClient.Modules.SelfUpdater.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UpdatesClient.Modules.SelfUpdater"
        mc:Ignorable="d"
        Title="SkyMP Launcher" Height="120" Width="400" ScrollViewer.VerticalScrollBarVisibility="Disabled"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FF4B4B4B">
    <Grid>
        <ProgressBar Name="progBar" Minimum="0" Maximum="1" Value="-1" IsIndeterminate="True" Height="10" VerticalAlignment="Bottom" Foreground="#FF06AC06"/>
        <TextBlock x:Name="Status" Margin="10,0,10,15" TextWrapping="Wrap" Text="Проверка обновлений..." Foreground="White" Height="16" VerticalAlignment="Bottom" FontWeight="Bold" TextAlignment="Center"/>
    </Grid>
</Window>
